<p id="notice"><%= notice %></p>

<h1>Wines</h1>


<table>
  <thead>
    <tr>
      <th>Trademark</th>
      <th>Qualification</th>
      <th>Strains</th>
      <th>Oenologist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.trademark %></td>
        <td><%= wine.qualification %></td>
        <td><%= wine.strains.map(&:name).join(',')%></td>
        <td><%= wine.oenologists.map(&:name).join(',') %></td>
        <% if user_signed_in? and current_user.admin  %>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

      <% end %>

    <% end %>
  </tbody>
</table>
<% if user_signed_in? and current_user.admin  %>
<%= link_to 'New Wine', new_wine_path %>
<%= link_to 'Sign out' , destroy_user_session_path , method: :delete  %>
<% end %>
<br>
